
extends ../layouts/main.pug

block main
  section.section
    nav.navbar__section
      span jackwui
    if ( servers.length > 0)
      table
        thead
          tr
            td Server Name
            td actions
      each server in servers
        tbody
          tr
            td
              a= server.name
            td
              a edit
              a delete
    else
      p Not servers configured.

    a(href="/addServer") Add new Server!
  pre= JSON.stringify(servers)
